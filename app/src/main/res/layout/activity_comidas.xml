<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_comidas"
    tools:context=".view.ComidasActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="right">
    <ImageButton

        android:id="@+id/bt_tiempo"
        android:layout_width="59dp"
        android:layout_height="57dp"
        android:layout_margin="10dp"
        android:background="@drawable/tiempo"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView2"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="255dp">
    </ImageButton>

    <ImageButton
        android:layout_width="59dp"
        android:layout_height="57dp"
        android:layout_margin="10dp"
        android:background="@drawable/ingredientes"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_tiempo"
        app:layout_constraintTop_toTopOf="parent">

    </ImageButton>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_comidas"
        android:layout_width="240dp"
        android:layout_height="576dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="center|right"
        >

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>